@using DelpinBooking.Controllers
@using Newtonsoft.Json
@model List<DelpinBooking.Models.Machine>

@{
    ViewData["Title"] = "Index";
    string machinesString = JsonConvert.SerializeObject(Model);
}

<h1>Dine ønskede maskiner</h1>

<form asp-action="CreateBooking" asp-controller="Bookings" method="get">
    <div class="form-group">
        <input type="hidden" name="machinesString" id="machinesString" class="form-control" value="@machinesString" />
    </div>
    <div class="form-group">
        <input type="submit" value="Opret" class="btn btn-primary" />
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Warehouse)
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Warehouse.City)
                    </td>
                    <td>
                        <a asp-action="Remove" asp-controller="ShoppingCart" asp-route-id="@item.Id">Fjern</a>  
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
