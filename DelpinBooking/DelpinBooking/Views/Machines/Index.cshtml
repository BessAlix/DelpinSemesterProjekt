@using DelpinBooking.Controllers
@model IEnumerable<DelpinBooking.Models.Machine>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@{
    int counter = 0;
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            counter++;

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }

                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>


@{ int page = ViewBag.QueryParametersDictionary["page"];}
@{ int size = ViewBag.QueryParametersDictionary["size"];}
@{ string nextPage = "page=" + (page + 1) + "&size=" + size;}
@{ string previousPage = "page=" + (page - 1) + "&size=" + size;}
@if (page > 1)
{
    <a asp-action="Index" asp-route-queryParameters="@previousPage">Forrige side</a>
}
@if (counter == size)
{
    <a asp-action="Index" asp-route-queryParameters="@nextPage">Næste side</a>
}

