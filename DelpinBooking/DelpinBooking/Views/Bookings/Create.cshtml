@model Tuple<Booking,List<string>>
@{
    ViewData["Title"] = "Opret";
}
 
<h1>Opret</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.Item1.Customer)
            <div class="form-group">
                <label asp-for="Item1.PickUpDate" class="control-label"></label>
                <input asp-for="Item1.PickUpDate" class="form-control" />
                <span asp-validation-for="Item1.PickUpDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item1.ReturnDate" class="control-label"></label>
                <input asp-for="Item1.ReturnDate" class="form-control" />
                <span asp-validation-for="Item1.ReturnDate" class="text-danger"></span>
            </div>

            @Html.DropDownListFor(m => m.Item2, new SelectList(Model.Item2));
       


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@if (User.IsInRole("Admin") || User.IsInRole("Employee"))
{
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
}
else
{
    <div>
        <a asp-action="BookingsForCustomer">Back to List</a>
    </div> 
}



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
